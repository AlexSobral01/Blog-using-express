<%- include('../../partials/head.ejs') %>
<body>
  <%- include('../../partials/navbar.ejs') %>
  <div class="container">
    <br>
    <div class="card">
      <div class="card-header">
        <h2>Cadastro de Artigos</h2>
      </div>
      <div class="card-body">
        <form method="post" action="/categories/save">
          <input class="form-control" type="text" name="title" placeholder="Título do Artigo" /><br>
          <textarea class="form-control" placeholder="Conteúdo do artigo" id="article"></textarea><br>
          <button class="btn btn-success">Pronto</button>
        </form>
      </div>
    </div>
  </div>
</body>
<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: '#article',
    plugins: [
      'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    ]
  })
</script>
