<%- include('../../partials/head.ejs') %>
<body>
  <%- include('../../partials/homeNavbar.ejs') %>
  <div class="container">
    <br>
    <% result.articles.rows.forEach(article => { %>
      <div class="card">
        <div class="card-header">
          <h4><%= article.title %></h2>
        </div>
        <div class="card-body">
          <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
        </div>
      </div>
      <br>
    <% }) %>
    <div class="row">
      <div class="col col-12">
        <% if (result.page > 1) { %>
          <a class="btn btn-primary" href="/articles/page/<%= result.page - 1 %>">Voltar</a>
        <% } else if (result.page == 2) {%>
          <a class="btn btn-primary" href="/">Voltar</a>
        <% } %>
        <% if (result.next) { %>
          <a class="btn btn-primary" href="/articles/page/<%= result.page + 1 %>" style="float: right;">Proximo</a>
        <% } %>
      </div>
    </div>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>